{
    "name": "markdown-maker",
    "version": "1.10.1",
    "description": "",
    "main": "src/main.ts",
    "bin": {
        "mdparse": "build/main.js"
    },
    "pkg": {
        "assets": [
            "node_modules/argparse/*",
            "node_modules/chokidar/*",
            "node_modules/colors/*",
            "node_modules/colors./*",
            "node_modules/marked/*",
            "src/templates/*"
        ],
        "targets": [
            "node20-macos-x64",
            "node20-win-x64",
            "node20-linux-x64"
        ]
    },
    "scripts": {
        "test": "mocha --require test/hooks.js",
        "test:yarn": "mocha",
        "bundle": "tsc --project tsconfig.json",
        "main": "node build/main.js document/main.md -o dist/bundle.md --debug",
        "debug": "node src/main.js -db document/main.md -o dist/bundle.md",
        "build": "npm run bundle && pkg --output bin/mdparse .",
        "build:yarn": "yarn bundle && pkg --output bin/mdparse .",
        "clear": "rm -rf dist",
        "premac-deploy": "npm run build",
        "mac-deploy": "mv bin/mdparse-macos ~/Documents/commands/mdparse",
        "prewin-deploy": "npm run build",
        "win-deploy": "mv bin/mdparse-win.exe ../../commands/mdparse.exe",
        "pretest": "npm run bundle",
        "pretest:yarn": "yarn bundle",
        "prepare": "npm run build"
    },
    "keywords": [],
    "author": "blitzher",
    "license": "MIT",
    "dependencies": {
        "argparse": "^2.0.1",
        "chokidar": "^3.5.1",
        "colors.ts": "^1.0.20",
        "marked": "^2.0.1",
        "node-html-parser": "^6.1.13",
        "require-runtime": "^2.0.0",
        "ws": "^8.8.1"
    },
    "devDependencies": {
        "@types/argparse": "^2.0.16",
        "@types/chokidar": "^2.1.3",
        "@types/colors": "^1.2.1",
        "@types/node": "^15.6.1",
        "@types/ws": "^8.5.3",
        "cloc": "^2.7.0",
        "mocha": "^8.3.1",
        "prettier": "^2.3.0",
        "typescript": "^4.3.2"
    }
}
